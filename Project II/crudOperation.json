//1.1 Inserting one customer data using insertOne()
db.customers.insertOne({
  customer_id: 11,
  name: "Jason Lee",
  email: "jason.lee@example.com",
  phone_no: ["0119988776"],
  license_no: "L9999000",
  address: "Penang"
})

//1.2 Inserting multiple vehicle data at once using insertMany()
db.vehicles.insertMany([
  {
    vehicle_id: 11,
    class: "MPV",
    plate_no: "WWA1234",
    vin: "MPV123456789",
    make: "Perodua",
    model: "Alza",
    year: 2024,
    vehicle_status: "available",
    odometer_km: 500,
    vehicle_location: "Kuala Lumpur"
  },
  {
    vehicle_id: 12,
    class: "MPV",
    plate_no: "WWB5678",
    vin: "MPV987654321",
    make: "Toyota",
    model: "Veloz",
    year: 2023,
    vehicle_status: "maintenance",
    odometer_km: 15000,
    vehicle_location: "Johor Bahru"
  }
])

//2.1 Finding customers whose name starts with the letter “N” with find()
db.customers.find({name: {$regex:"^N"}})

//2.2 Finding customers whose name starts with the letter “N” with findOne()
db.customers.findOne({name: {$regex:"^N"}})

//2.3.1 Filtering vehicles that has mileage greater than 50000km with $gt
db.vehicles.find({odometer_km: {$gt: 50000}})

//2.3.2 Filtering payment records where deposit amount is more than or equal to 200 using $gte
db.payments.find({
  "deposit.amount": {$gte: 200}
})

//2.3.3 Filtering vehicles that the model is either Veloz or Vios using $in
db.vehicles.find({model: {$in: ["Veloz", "Vios"]}})

//2.3.4 Filtering vehicles that locates in Penang AND available using $and
db.vehicles.find({
  $and: [
    {vehicle_status: "available"},
    {vehicle_location: "Penang"}
  ]
})

//2.3.5 Filtering vehicles that locates in Penang OR available using $or
db.vehicles.find({
  $or: [
    {vehicle_status: "available"},
    {vehicle_location: "Penang"}
  ]
})

//2.4 Show customer list that contains only name, email and phone number.
db.customers.find(
  {}, 
  {_id: 0, name: 1, email: 1, phone_no: 1}
)

//3.1 Updating vehicle 1’s status to maintenance using updateOne() and set()
db.vehicles.updateOne(
  {vehicle_id: 1},
  {$set: { vehicle_status: "maintenance"}}
)

//3.2 Updating all TNG payment that are pending into paid using updateMany() and set()
db.payments.updateMany(
  {method: "TNG", payment_status: "pending"},
  {$set: {payment_status: "paid"}}
)

//3.3.1 Incrementing the odometer by 500km for vehicle ID 2 using $inc
db.vehicles.updateOne(
  {vehicle_id: 2},
  {$inc: {odometer_km: 500}}
)

//3.3.2 Adding a new phone number for customer ID 2 using $push
db.customers.updateOne(
  {customer_id: 2},
  {$push: {phone_no: "01122334455"}}
)

//3.3.3 Removing a phone number from customer ID 1 using $pull
db.customers.updateOne(
  {customer_id: 1},
  {$pull: {phone_no: "0123456789"}}
)

//4.1 Deleting one record from payments by payment ID using deleteOne()
db.payments.deleteOne({payment_id: 10})

//4.2 Deleting many cancelled booking records at once using deleteMany()
db.bookings.deleteMany({booking_status: "cancelled"})














